<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg3"
    tools:context="com.example.funhouse.mainscreenff.LearnColors"
    android:layout_weight="5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/brownImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/browncolor" />


            <ImageView
                android:id="@+id/redImage"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/redcolor" />

            <ImageView

                android:id="@+id/blueImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/bluecolor" />
            <ImageView

                android:id="@+id/greenImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/greencolor" />

            <ImageView

                android:id="@+id/yellowImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/yellowcolor" />


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/viewImage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:padding="1dp"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="Click on the Colors to know the Name"
            android:textColor="@color/textColor"
            android:textStyle="bold|italic"
            android:textSize="25dp" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:textAlignment="center"
            android:maxWidth="100dp"
            android:maxHeight="50dp"
            android:adjustViewBounds="true"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/orangeImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/orangecolor" />


            <ImageView
                android:id="@+id/grayImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/graycolor" />


            <ImageView
                android:id="@+id/blackImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/black" />


            <ImageView
                android:id="@+id/pinkImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/pinkcolor" />
            <ImageView
                android:id="@+id/purpleImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/purplecolor" />


        </LinearLayout>


    </ScrollView>



</LinearLayout>
