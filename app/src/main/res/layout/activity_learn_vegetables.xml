<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundanimal1"
    android:orientation="vertical"
    tools:context="com.example.funhouse.mainscreenff.LearnVegetables">


    <ImageButton

        android:id="@+id/buttonp"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"


        android:layout_marginRight="90dp"


        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/preeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/buttonn"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"

        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"



        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/nextt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />




    <ImageView

        android:id="@+id/ivntxt"
        android:layout_width="334dp"
        android:layout_height="47dp"

        android:textAlignment="center"
        android:textColor="#F3150E"
        android:textStyle="bold|italic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.175" />

    <ImageView

        android:id="@+id/ivn"
        android:layout_width="491dp"
        android:layout_height="215dp"

        android:textAlignment="center"
        android:textColor="#F3150E"
        android:textStyle="bold|italic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="137dp"
        tools:layout_editor_absoluteX="91dp" />


    <ImageView
        android:id="@+id/backlearnvegitable"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/back"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ivn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="298dp" />


</android.support.constraint.ConstraintLayout>
