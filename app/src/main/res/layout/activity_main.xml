<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.example.funhouse.mainscreenff.MainActivity"

    >


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="485dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/kidssmart"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="288dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="206dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/education"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.209"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <ImageView
        android:id="@+id/backmain"
        android:layout_width="81dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/back"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="230dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.123" />

    <HorizontalScrollView
        android:id="@+id/mainScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/learnDoodle"
                android:layout_width="153.5dp"
                android:layout_height="153.5dp"

                app:srcCompat="@drawable/doodle" />


            <ImageView
                android:id="@+id/Vegetables_btn"
                android:layout_width="153.5dp"
                android:layout_height="153.5dp"
                app:srcCompat="@drawable/veg" />

            <ImageView
                android:id="@+id/LearnShapes"
                android:layout_width="153.5dp"
                android:layout_height="153.5dp"

                app:srcCompat="@drawable/learnshapes" />

            <ImageView
                android:id="@+id/LearnColors"
                android:layout_width="153.5dp"
                android:layout_height="153.5dp"
                app:srcCompat="@drawable/learncolors" />


            <ImageView
                android:id="@+id/Animals_btn"
                android:layout_width="153.5dp"
                android:layout_height="153.5dp"

                app:srcCompat="@drawable/animals" />


            <ImageView
                android:id="@+id/Fruits_btn"
                android:layout_width="153.5dp"
                android:layout_height="153.5dp"
                app:srcCompat="@drawable/fruits" />
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
